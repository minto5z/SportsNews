<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="2dp"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector">


        <ImageView

            android:id="@+id/cardView_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardView_image"
            android:maxLines="3"
            android:padding="8dp"
            android:text="@string/news_main_title"
            android:textColor="#222"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/article_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headline"
            android:maxLines="3"
            android:padding="8dp"
            android:text="@string/news_main_description"
            android:textColor="#666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingRight="8dp"
            android:gravity="end"
            android:textColor="#99666666"
            android:textSize="10sp"
            android:layout_below="@+id/article_info"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>